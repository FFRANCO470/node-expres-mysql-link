<div class="contaier p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="post">
                        <div class="form-group mt-4" mt-4>
                            <input type="text" class="form-control" value="{{link.title}}" name="title" placeholder="Title" autofocus>
                        </div>
                        <div class="form-group mt-4" p-4>
                            <input type="url" class="form-control" value="{{link.url}}" name="url" placeholder="URL">
                        </div>
                        <div class="form-group mt-4">
                            <textarea name="description" rows="2" class="form-control" placeholder="Description">{{link.description}}</textarea>
                        </div>
                        <div class="form-group mt-4">
                            <button  class="btn btn-primary form-control">Save</button>
                        </div>                        
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>